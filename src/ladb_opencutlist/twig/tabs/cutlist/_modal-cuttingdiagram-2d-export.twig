{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_cuttingdiagram_2d_export' %}
{% set title = ('tab.cutlist.cuttingdiagram.export.title'|i18next)~'<small class="ladb-horizontal-left-separator">'~group.material_name|escape('html')~' / '~group.std_dimension~'</small>' %}
{% set sheetStrippedname = group.material_type == 6 ? 'veneer' : 'good' %}  {# 6 = TYPE_VENEER #}

{% block headerToolsInner %}
    {% include 'components/_widget-preset.twig' %}
    <button class="btn btn-default btn-xs" data-help-page="cutlist.cuttingdiagram2d"><i class="ladb-opencutlist-icon-help"></i> {{ 'default.help'|i18next }}</button>
{% endblock %}

{% block headerInner %}
    {{ parent() }}
    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li role="presentation"{% if tab == 'general' %} class="active"{% endif %}><a href="#tab_cuttingdiagram_options_general" role="tab" data-toggle="tab">{{ 'tab.cutlist.cuttingdiagram.export.options_general'|i18next }}</a></li>
    </ul>
{% endblock %}

{% block bodyInner %}
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane{% if tab == 'general' %} active{% endif %}" id="tab_cuttingdiagram_options_general">
            <div class="form form-horizontal" style="margin-top: 15px;">
                <div class="form-group">
                    <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_file_format_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                    <label for="ladb_input_file_format" class="control-label col-xs-4">{{ ('tab.cutlist.cuttingdiagram.export.option_file_format')|i18next }}</label>
                    <div class="col-xs-7">
                        <select class="form-control" id="ladb_select_file_format">
                            <option value="svg" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_file_format_svg'|i18next }}"></option>
                            <option value="dxf" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_file_format_dxf'|i18next }}"></option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerRightInner %}
    <button class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button class="btn btn-primary btn-validate-modal" id="ladb_btn_export">{{ 'default.export'|i18next }} <i class="ladb-opencutlist-icon-arrow-right"></i> <span id="ladb_btn_export_file_format"></span></button>
{% endblock %}
