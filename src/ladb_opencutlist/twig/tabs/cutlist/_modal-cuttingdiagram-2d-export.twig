{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_cuttingdiagram_2d_export' %}
{% set title = ('tab.cutlist.cuttingdiagram.export.title'|i18next)~'<small class="ladb-horizontal-left-separator">'~group.material_name|escape('html')~' / '~group.std_dimension~'</small>' %}
{% set sheetStrippedname = group.material_type == 6 ? 'veneer' : 'good' %}  {# 6 = TYPE_VENEER #}

{% block headerToolsInner %}
    {% include 'components/_widget-preset.twig' %}
    <button class="btn btn-default btn-xs" data-help-page="cutlist.cuttingdiagram2d"><i class="ladb-opencutlist-icon-help"></i> {{ 'default.help'|i18next }}</button>
{% endblock %}

{% block headerInner %}
    {{ parent() }}
    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li role="presentation"{% if tab == 'general' %} class="active"{% endif %}><a href="#tab_cuttingdiagram_options_general" role="tab" data-toggle="tab">{{ 'tab.cutlist.cuttingdiagram.export.options_general'|i18next }}</a></li>
    </ul>
{% endblock %}

{% block bodyInner %}
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane{% if tab == 'general' %} active{% endif %}" id="tab_cuttingdiagram_options_general">
            <div class="form form-horizontal" style="margin-top: 15px;">
                <div class="form-group">
                    <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_file_format_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                    <label for="ladb_select_file_format" class="control-label col-xs-3">{{ ('tab.cutlist.cuttingdiagram.export.option_file_format')|i18next }}</label>
                    <div class="col-xs-8">
                        <select class="form-control" id="ladb_select_file_format">
                            <option value="dxf" data-content="DXF (Drawing eXchange Format)"></option>
                            <option value="svg" data-content="SVG (Scalable Vector Graphics)"></option>
                        </select>
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <div class="col-xs-3"></div>
                    <label class="col-xs-4 text-center">{{ 'tab.cutlist.cuttingdiagram.export.option_stroke_color'|i18next }}</label>
                    <label class="col-xs-4 text-center">{{ 'tab.cutlist.cuttingdiagram.export.option_fill_color'|i18next }}</label>
                </div>
                <div class="form-group">
                    <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_sheet_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                    <div class="col-xs-3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="ladb_input_sheet_hidden">{{ 'tab.cutlist.cuttingdiagram.export.option_sheet'|i18next }}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_sheet_stroke_color" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_sheet_fill_color" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_parts_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                    <div class="col-xs-3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="ladb_input_parts_hidden">{{ 'tab.cutlist.cuttingdiagram.export.option_parts'|i18next }}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_parts_stroke_color" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_parts_fill_color" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_parts_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                    <div class="col-xs-3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="ladb_input_leftovers_hidden">{{ 'tab.cutlist.cuttingdiagram.export.option_leftovers'|i18next }}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_leftovers_stroke_color" class="form-control"/>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_leftovers_fill_color" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.cuttingdiagram.export.option_cuts_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                    <div class="col-xs-3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="ladb_input_cuts_hidden">{{ 'tab.cutlist.cuttingdiagram.export.option_cuts'|i18next }}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <input id="ladb_input_cuts_stroke_color" class="form-control"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerRightInner %}
    <button class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button class="btn btn-primary btn-validate-modal" id="ladb_btn_export">{{ 'default.export'|i18next }} <i class="ladb-opencutlist-icon-arrow-right"></i> <span id="ladb_btn_export_file_format"></span></button>
{% endblock %}
