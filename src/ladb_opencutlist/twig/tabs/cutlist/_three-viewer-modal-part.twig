{% extends 'components/_three-viewer.twig' %}

{% set viewerClasses = 'ladb-three-viewer-modal-part' %}

{% import 'components/_three-viewer.twig' as fn %}

{% block uiLeft %}
    {{ fn.btn_view('isometric', 'view-isometric', THREE_CAMERA_VIEWS) }}
    {% if group.material_type == 1 or group.material_type == 2  %} {# 1 = TYPE_SOLID_WOOD, 2 = TYPE_SHEET_GOOD #}
        {{ fn.btn_view('top', 'veneer-10', THREE_CAMERA_VIEWS, 'tab.cutlist.tooltip.veneer_zmax'|i18next) }}
        {{ fn.btn_view('bottom', 'veneer-01', THREE_CAMERA_VIEWS, 'tab.cutlist.tooltip.veneer_zmin'|i18next) }}
        <span>&nbsp;</span>
    {% endif %}
    {{ fn.btn_zoom(null, 'tab.cutlist.layout.option_camera_zoom_auto'|i18next, '<i class="ladb-opencutlist-icon-zoom-auto"></i>') }}
{% endblock %}

{% block uiRight %}
    {{ fn.btn_command('plan', 'set_box_helper_visible', { visible:null }, 'core.component.three_viewer.toggle_box_helper'|i18next, 'left', 'color: #00f;') }}
    {{ fn.btn_command('axes', 'set_axes_helper_visible', { visible:null }, 'core.component.three_viewer.toggle_axes_helper'|i18next, 'left') }}
{% endblock %}

