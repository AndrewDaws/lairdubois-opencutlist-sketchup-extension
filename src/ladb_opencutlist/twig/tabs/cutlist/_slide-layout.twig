{% extends 'tabs/base-slide.twig' %}

{% set id = 'ladb_cutlist_slide_layout' %}
{% set out = true %}

{% block headerInner %}
    {{ parent() }}
    <div class="ladb-header-extra">
        {% include 'tabs/cutlist/_header-extra.twig' with { 'generatedAt':'000' } %}
    </div>
{% endblock %}

{% block headerHeadingInner %}
    {{ 'tab.cutlist.layout.title'|i18next}}
{% endblock %}

{% block headerToolsInner %}
    <button id="ladb_btn_layout" class="btn btn-primary"><i class="ladb-opencutlist-icon-refresh"></i> {{ 'tab.cutlist.layout.title'|i18next }}...</button>
    <button id="ladb_btn_print" class="btn btn-default"><i class="ladb-opencutlist-icon-print"></i> {{ 'default.print'|i18next }}</button>
    &nbsp;
    <button id="ladb_btn_close" class="btn btn-default"><i class="ladb-opencutlist-icon-close"></i> {{ 'default.close'|i18next }}</button>
{% endblock %}

{% block containerInner %}
    {{ parent() }}
    <div class="ladb-page">

        {% include 'core/_alert-errors.twig' %}
        {% include 'core/_alert-warnings.twig' %}

        {% embed 'components/_viewer-part.twig' %}
            {% block uiLeft %}
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'isometric' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.viewer_part.isometric_view'|i18next }}"><i class="ladb-opencutlist-icon-isometric"></i></button>
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'top' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.viewer_part.top_view'|i18next }}"><i class="ladb-opencutlist-icon-view-top"></i></button>
                <div class="ladb-flex">
                    <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'left' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="left" title="{{ 'core.component.viewer_part.left_view'|i18next }}"><i class="ladb-opencutlist-icon-view-left"></i></button>
                    <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'front' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="top" title="{{ 'core.component.viewer_part.front_view'|i18next }}"><i class="ladb-opencutlist-icon-view-front"></i></button>
                    <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'right' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.viewer_part.right_view'|i18next }}"><i class="ladb-opencutlist-icon-view-right"></i></button>
                </div>
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'bottom' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.viewer_part.bottom_view'|i18next }}"><i class="ladb-opencutlist-icon-view-bottom"></i></button>
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'back' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.viewer_part.back_view'|i18next }}"><i class="ladb-opencutlist-icon-view-back"></i></button>
            {% endblock %}
        {% endembed %}

    </div>
{% endblock %}
