{% extends 'tabs/base-slide.twig' %}

{% set id = 'ladb_cutlist_slide_layout' %}
{% set out = true %}
{% set slideClasses = 'ladb-slide-fullpage print-no-header' %}

{% block headerHeadingInner %}
    {{ 'tab.cutlist.layout.title'|i18next}}{% if group and group.material_type != 0 %} {# 0 = TYPE_UNKNOW #} <small>| {{ group.material_name|escape('html') }} / <strong>{{ group.std_dimension}}</strong></small>{% endif %}
{% endblock %}

{% block headerToolsInner %}
    <button id="ladb_btn_layout" class="btn btn-primary"><i class="ladb-opencutlist-icon-refresh"></i> {{ 'tab.cutlist.layout.title'|i18next }}...</button>
    <button id="ladb_btn_print" class="btn btn-default"><i class="ladb-opencutlist-icon-print"></i> {{ 'default.print'|i18next }}</button>
    &nbsp;
    <button id="ladb_btn_close" class="btn btn-default"><i class="ladb-opencutlist-icon-close"></i> {{ 'default.close'|i18next }}</button>
{% endblock %}

{% block containerFluidOuter %}
    {% include 'core/_alert-errors.twig' %}
    {% embed 'components/_three-viewer.twig' with { 'viewerClasses':'ladb-three-viewer-slide-layout', 'iframeClasses':'ladb-paper-page-body' } %}
        {% block iframeOutter %}
            <div class="ladb-paper-page">
                <div class="ladb-paper-page-header">
                    <div class="ladb-header">
                        <div class="container-fluid">
                            <h1 class="ladb-heading">{{ block('headerHeadingInner') }}</h1>
                            {% include 'tabs/cutlist/_header-extra.twig' with { 'printPreview':true } %}
                        </div>
                    </div>
                </div>
                {{ parent() }}
            </div>
        {% endblock %}
        {% block uiLeft %}
            <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'isometric' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.three_viewer.isometric_view'|i18next }}"><i class="ladb-opencutlist-icon-isometric"></i></button>
            <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'top' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.three_viewer.top_view'|i18next }}"><i class="ladb-opencutlist-icon-arrow-down"></i></button>
            <div class="ladb-flex">
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'left' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="left" title="{{ 'core.component.three_viewer.left_view'|i18next }}"><i class="ladb-opencutlist-icon-arrow-right"></i></button>
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'front' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="top" title="{{ 'core.component.three_viewer.front_view'|i18next }}"><i class="ladb-opencutlist-icon-view-front"></i></button>
                <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'right' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.three_viewer.right_view'|i18next }}"><i class="ladb-opencutlist-icon-arrow-left"></i></button>
            </div>
            <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'bottom' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.three_viewer.bottom_view'|i18next }}"><i class="ladb-opencutlist-icon-arrow-up"></i></button>
            <button class="btn btn-default btn-sm" data-command="set_view" data-params="{{ { view:'back' }|json_encode|escape('html') }}" data-toggle="tooltip" data-placement="right" title="{{ 'core.component.three_viewer.back_view'|i18next }}"><i class="ladb-opencutlist-icon-view-back"></i></button>
        {% endblock %}
    {% endembed %}
{% endblock %}

