<tr id="ladb_outliner_row_{{ node.id }}" class="ladb-outliner-row ladb-minitools-holder{% if not node.visible or not parentNodeVisible %} ladb-mute{% endif %}{{ parentClasses }}{% if not parentNodeExpended %} hide{% endif %}" data-node-id="{{ node.id }}">
    <td class="table-cell-fluid" style="padding-left: {{ depth * 20 }}px;">
        <div class="table-cell-fluid-inner{% if depth > 0 %} table-cell-fluid-inner-padded-left{% endif %}">
            <div class="ladb-minitools ladb-minitools-left">
                {% if node.children|length > 0 %}
                    <a href="#" class="ladb-btn-folding-toggle-row"><i class="ladb-opencutlist-icon-arrow-{% if node.expended %}down{% else %}right{% endif %}"></i></a>
                {% else %}
                    <div style="display: inline-block; width: 20px;"></div>
                {% endif %}
            </div>
            <span class="ladb-outliner-node-type">{% include 'tabs/outliner/_node-icon.twig' %}</span>{% if node.name is not empty %}<span class="ladb-outliner-node-name">{{ node.name|escape('html') }}</span>{% endif %}{% if node.type != 1 or node.name is empty %}<span class="ladb-outliner-node-definition-name">{% include 'tabs/outliner/_node-default-name.twig' %}</span>{% endif %}
            <div class="ladb-minitools ladb-minitools-right">
                <span class="ladb-separator no-print"></span>
                {% if capabilities.sketchup_version_number >= 2000000000 %}<a href="#" class="ladb-btn-node-set-active"><i class="ladb-opencutlist-icon-cursor"></i></a>{% endif %}
                {% if node.type != 0 %}{# 0 = TYPE_MODEL #}<a href="#" class="ladb-btn-node-toggle-visible"><i class="ladb-opencutlist-icon-eye-{% if node.visible %}open{% else %}close{% endif %}"></i></a>{% endif %}
                <a href="#" class="ladb-btn-node-edit ladb-click-tool"><i class="ladb-opencutlist-icon-edit"></i></a>
            </div>
            {% if node.layer_name is not empty and node.layer_name != 'Layer0' %}
                <ul class="ladb-outliner-node-layers">
                    {% for folder in node.layer_folders %}
                        <li><a href="#"><i class="ladb-opencutlist-icon-folder"></i> {{ folder }}</a></li>
                    {% endfor %}
                    <li><a href="#"><i class="ladb-opencutlist-icon-tag"></i> {{ node.layer_name }}</a></li>
                </ul>
            {% endif %}
        </div>
    </td>
    <td class="ladb-cutlist-value">{% if node.type == 3 and node.part_count > 1 %}{# 3 = TYPE_PART #}1 + {{ node.part_count - 1 }}{% else %}{{ node.part_count }}{% endif %}</td>
</tr>
{% if node.children|length > 0 %}
    {% set parentNode = node %}
    {% set parentClasses = (parentClasses~' folder-'~node.id) %}
    {% set parentNodeVisible = node.visible and parentNodeVisible %}
    {% set parentNodeExpended = node.expended and parentNodeExpended %}
    {% set depth = depth + 1 %}
    {% for node in node.children %}
        {% include 'tabs/outliner/_list-row-node.twig' %}
    {% endfor %}
{% endif %}